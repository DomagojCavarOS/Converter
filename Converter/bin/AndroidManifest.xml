<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.converter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.converter.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.converter.Convert"
            android:label="@string/title_activity_convert" >
        </activity>
        <activity
            android:name="com.example.converter.Temperature"
            android:label="@string/title_activity_temperature" >
        </activity>
        <activity
            android:name="com.example.converter.Data"
            android:label="@string/title_activity_data" >
        </activity>
        <activity
            android:name="com.example.converter.Distance"
            android:label="@string/title_activity_distance" >
        </activity>
        <activity
            android:name="com.example.converter.Weight"
            android:label="@string/title_activity_weight" >
        </activity>
    </application>

</manifest>
